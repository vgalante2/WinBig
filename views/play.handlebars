<main class="d-flex">
    {{#if isLoggedIn}}
        {{> loggedInSidebar user}}
    {{else}}
        {{> loggedOutSidebar}}
    {{/if}}
    <section id="main-content" class="d-flex row justify-content-center">
        <div class=" d-flex flex-column justify-content-evenly container text-center">
            <h1 class=" heading display-2 text-center pt-5 text-dark">Welcome, <span class="user">{{user.username}}</span></h1>
            <div class=" d-flex flex-column align-items-center justify-content-around gap-5">
                <h3 class="question-heading display-6">What are you playing today?</h3>
                <div class="d-flex w-100 justify-content-around pb-5">
                    <div id="coin" class="row border border-3 border-success-subtle rounded p-5 align-items-center bg-dark">
                        <div class="col-12 text-center">
                            <h1 class="game-heading text-light">Coin Toss</h1>
                            <img class="coin-img" src="/assets/images/coin.gif">
                        </div>
                    </div>
                    <div id="dice" class="row border border-3 border-success-subtle rounded p-5 align-items-center bg-dark">
                        <div class="col-12 text-center">
                            <h1 class="game-heading text-light" >Dice</h1>
                            <img class="dice-img" src="/assets/images/dice.gif">
                        </div>
                    </div>
                </div>
            </div>  
        </div>
    </section>

    <script>
        const diceBtn = document.querySelector("#dice");
        const coinBtn = document.querySelector("#coin");



        diceBtn.addEventListener("click", function(event) {
          window.location.href = "/dice";
        })

        coinBtn.addEventListener("click", function() {
            window.location.href = "/coin-toss";
        })


    </script>
</main>


