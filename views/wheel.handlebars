<link rel="stylesheet" href="/assets/css/wheel-styles.css">
<main class="d-flex">
        {{#if isLoggedIn}}
            {{> loggedInSidebar user}}
        {{else}}
            {{> loggedOutSidebar}}
        {{/if}}
		<section class="row justify-content-center">
			<h2 class="text-center text-light pt-5 pb-5 h1">Spin the Wheel</h2>

		<div class="wheel-container bg-dark p-5 mb-5"> 
			
	<button id="spin">Spin</button>
	<span class="arrow"></span>
       <div class="container">
	    <div class="one">1</div>
	<div class="two">2</div>
	<div class="three">3</div>
	<div class="four">4</div>
	<div class="five">5</div>
	<div class="six">6</div>
	<div class="seven">7</div>
	<div class="eight">8</div>
</div>

		</div> 
		<p class="result"></p>
		<script src="/assets/js/wheel-spin.js"></script>
		</section>
		</main>

